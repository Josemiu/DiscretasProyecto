<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="interfaz.HuffmanController" spacing="10" padding="10">
    <Label text="Huffman Compression Tool"/>
    <Button text="Select File" onAction="#handleSelectFile"/>
    <Label text="Selected File:"/>
    <TextArea fx:id="filePathArea" editable="false" wrapText="true"/>
    <Button text="Compress File" onAction="#handleCompressFile"/>
    <Button text="Decompress File" onAction="#handleDecompressFile"/>
    <Label text="Output:"/>
    <TextArea fx:id="outputArea" editable="false" wrapText="true"/>
</VBox>
